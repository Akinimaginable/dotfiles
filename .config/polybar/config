[module/memory]
type = internal/memory
interval = 2
format-suffix = "  "
format-suffix-foreground = ${colors.foreground-alt}
format-underline = ${colors.green}
label = %percentage_used%% 

[module/date]
type = internal/date
interval = 5
time = %H:%M
format-suffix = "  "
format-suffix-foreground = ${colors.foreground-alt}
format-underline = ${colors.date}
label = %time%

[module/volume]
