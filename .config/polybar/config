[colors]
background = #151515
background-alt = #262626
foreground = #F5F5F5
foreground-alt = #f9f9f9
primary = #750035
yellow = #ffc107
red = #ff0c2f
green = #28a745
blue = #007bff
violet = #580bd6

[bar/akia]
monitor = DVI-I-0
width = 100%
height = 23
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 2
font-0 = Deja Vu:pixelsize=10.5
font-1 = FontAwesome:size=10.5
modules-left = i3
modules-center = xwindow
modules-right = pulseaudio discord cpu temperature memory date

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.primary}
label-focused-padding = 2
label-unfocused = %icon%
label-unfocused-padding = 2
label-visible = %icon%
label-visible-background = ${colors.background-alt}
label-visible-underline = ${colors.primary}
label-urgent = %icon%
label-urgrnt-background = ${color.yellow}
label-urgent-padding = 2
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;

[module/xwindow]
type = internal/xwindow
label = %title%

[module/cpu]
type = internal/cpu
interval = 2
format-suffix = "  "
format-suffix-foreground = ${colors.foreground-alt}
format-underline = ${colors.red}
label = %percentage%%

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
format-underline = ${colors.yellow}
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon0/temp1_input
warn-temperature = 80

[module/memory]
type = internal/memory
interval = 2
format-suffix = "  "
format-suffix-foreground = ${colors.foreground-alt}
format-underline = ${colors.green}
label = %percentage_used%%

[module/date]
type = internal/date
interval = 5
time = %H:%M
format-suffix = "  "
format-suffix-foreground = ${colors.foreground-alt}
format-underline = ${colors.blue}
label = %time%

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_12_00.3.analog-stereo
use-ui-max = true
interval = 5
format-suffix-foreground = ${colors.foreground-alt}
format-underline = ${colors.violet}

[module/discord]
type = custom/script
exec = echo " "
interval = 10
tail = true
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.violet}
click-left = discord
click-right = killall Discord
format-prefix = ""
